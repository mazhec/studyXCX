<!-- <text>pages/input/input.wxml</text> -->
<!-- 1.input 的基本使用 -->
<input/>

<!-- 2.value: input 中的默认值 -->
<input value="敦厚纯善" placeholder="义薄云天" />

<!-- 3.type: 决定键盘类型(英文字母+其他符号/数字/身份证) -->
<input type="idcard" />

<!-- 4.password: 暗文 -->
<input type="password" />

<!-- 5.placeholder: 占位文字 -->
<input placeholder="请输入内容" />

<input type="text" confirm-type="send" />

<!-- 6.input 绑定事件 -->
<input bindinput="handleInput" 
       bindfocus="handleFocus"
       bindblur="handleBlur" />