<!--pages/scroll/scroll.wxml-->
<!-- 1.水平滚动: scroll-x -->
<scroll-view class="container1" scroll-x>
  <view wx:for="{{10}}" class="item1" wx:key="index">
    {{item}}
  </view>
</scroll-view>
<!-- 2.垂直滚动: scroll-y -->
<scroll-view class="container2" scroll-y>
  <view wx:for="{{10}}" class="item2" wx:key="index">{{item}}</view>
</scroll-view>

<!-- 3.其他属性 -->
<scroll-view bindscroll="handleScroll" class="container2" scroll-y>
  <view wx:for="{{10}}" class="item2" wx:key="index">{{item}}</view>
</scroll-view>